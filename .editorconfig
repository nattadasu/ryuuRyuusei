[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**.md]
indent_size = 2

[**.{csv,tsv}]
indent_size = 8
indent_style = tab
tab_width = 8
trim_trailing_whitespace = false

[**.json]
indent_size = 2

[**.{yml,yaml}]
indent_size = 2
